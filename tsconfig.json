{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "declaration": true,
    "outDir": "./lib",
    "strict": true
  },
  "path": {
    "*": ["./src/*"]
  },
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipLibCheck": true,
  "include": ["src"],
  "exclude": ["node_modules", "readme.md"]
}
